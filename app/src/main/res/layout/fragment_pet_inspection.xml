<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky_blue_dark"
    tools:context=".PetInspectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/pet_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pet_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/sky_blue"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pet_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pet Name" />

    <TextView
        android:id="@+id/pet_type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sky_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/pet_name"
        app:layout_constraintTop_toBottomOf="@+id/pet_name"
        tools:text="Pet Type" />

    <TextView
        android:id="@+id/pet_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/sky_blue"
        app:layout_constraintStart_toStartOf="@+id/pet_name"
        app:layout_constraintTop_toBottomOf="@+id/pet_type"
        tools:text="This right here is a description of the different types of pets. " />

    <TextView
        android:id="@+id/pet_parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/sky_blue"
        app:layout_constraintStart_toStartOf="@+id/pet_name"
        app:layout_constraintTop_toBottomOf="@+id/pet_description"
        tools:text="Parent: ???" />

    <TextView
        android:id="@+id/pet_birthtime"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/sky_blue"
        app:layout_constraintStart_toStartOf="@+id/pet_name"
        app:layout_constraintTop_toBottomOf="@+id/pet_parent"
        tools:text="Birth time: ???" />

    <Button
        android:id="@+id/button_incubate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Incubate"
        app:backgroundTint="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="@+id/pet_image"
        app:layout_constraintStart_toStartOf="@+id/pet_image"
        app:layout_constraintTop_toBottomOf="@+id/pet_image" />

    <Button
        android:id="@+id/button_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sell"
        app:backgroundTint="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="@+id/button_incubate"
        app:layout_constraintStart_toStartOf="@+id/button_incubate"
        app:layout_constraintTop_toBottomOf="@+id/button_incubate" />

</androidx.constraintlayout.widget.ConstraintLayout>